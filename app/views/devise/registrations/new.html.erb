<%= render "include/navbar_signin" %>

<div class="container-fluid top-content">
	<div class="row">
		<div class="col-xs-12 col-sm-4 col-sm-offsett-4 col-md-4 col-md-offset-4">
			<h2 class="logo">Sign up</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "user-form"}) do |f| %>
			  <%= devise_error_messages! %>
			  <%= hidden_field_tag "user[role]", "author" %>

			  <div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12">
					  <%= f.label :email %><br />
					  <%= f.email_field :email, autofocus: true, class: "user-field form-control" %>
			  	</div>
			  </div>

			  <div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12">
			  		<%= f.label :password %><br />
			    	<%= f.password_field :password, autocomplete: "off", class: "user-field form-control" %>
			  	</div>
			  </div>

			  <div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12">
			  	<%= f.label :password_confirmation %><br />
			    <%= f.password_field :password_confirmation, autocomplete: "off", class: "user-field form-control" %>
			  	</div>
			  </div>

				<div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12 centered">
			  		<%= f.submit "Sign up", class: "btn btn-info" %>
			  		<%= link_to "Cancel", root_path %>
			  	</div>
			  </div>
			<% end %>
		</div>
	</div>
</div>
