<%= render "include/navbar_signin" %>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-4 col-sm-offsett-4 col-md-4 col-md-offset-4">
			<h2 class="logo">Sign in</h2>

			<% flash.each do |name, msg| %>
				<div class="alert alert-danger" role="alert">
		    	<%= content_tag :section, msg, :id => "flash_#{name}", :class => "flash" %>
		    </div>
			<% end %>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user-form"}) do |f| %>
			  <%= devise_error_messages! %>
			  <div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12">
			  	<%= f.label :email %><br />
			  	<%= f.email_field :email, autofocus: true, class: "user-field form-control" %>
			  	</div>
			  </div>

			  <div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12">
			  	<%= f.label :password %><br />
			    <%= f.password_field :password, autocomplete: "off", class: "user-field form-control" %>
			    </div>
			  </div>

			  <% if devise_mapping.rememberable? -%>
			    <div class="row">
			    	<div class="col-xs-12 col-sm-12 col-md-12">
			    	<%= f.check_box :remember_me %> <%= f.label :remember_me %><br>
			    	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
						  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
						<% end -%>
						<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
						  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
						<% end -%>
			    	</div>
			    </div>
			  <% end -%>

			  <div class="row">
			  	<div class="col-xs-12 col-sm-12 col-md-12 centered">
			  	<%= f.submit "Sign in", class: "btn btn-info" %>
			  	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
					  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
					<% end -%>
					</div>
			  </div>
			<% end %>
		</div>
	</div>
</div>
