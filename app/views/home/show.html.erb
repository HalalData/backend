<%= render "include/navbar" %>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-7">
			
			<!-- loop here -->
			<% @Places.each do |row| %>
			<div class="list-item">
				<h3><%= link_to row.name.split.map(&:capitalize).join(' '), place_path(row.id) %></h3>
				<p><%= row.address.split.map(&:capitalize).join(' ') %></p>
				<p><%= row.country_name + ", " + row.postal_code %></p>
			</div>
			<% end %>

			<%= paginate @Places %>
		</div>
	</div>
</div>